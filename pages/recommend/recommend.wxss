/* pages/recommend/recommend.wxss */
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 10vh;
}

.body{
  height: 80vh;
}

.label{
  margin-top: 20px;
  color: orange;
}

.title{
  align-items: center;
  padding-left: 40%;
  color: orange;
}

.model-title{
  right: -40%;
  color: rgb(136, 132, 133);
}

.head-btn{
  right: 0;
  background-color: transparent;
  color: orange;
}


.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.modalDlg{
  width: 580rpx;
  height: 80vh;
  position: fixed;
  top: 40%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}