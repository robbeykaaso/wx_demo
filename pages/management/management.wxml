<!--pages/management/management.wxml-->
<view class="row">
<text class="title">我的</text>
<button class="head-btn" bindtap="bindEnterpriseDetailTap">发起人入口</button>
</view>
<text class="nav-btn">姓名头像</text>

<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">已参加</view>
  <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">待使用</view>
  <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">关注</view>
</view>
 
<swiper current="{{currentTab}}" duration="300" bindchange="swiperTab">
  <swiper-item >
    <scroll-view scroll-y="true" class="body">
      <block wx:for="{{cards}}" wx:for-item="card">
        <button class="label" bindtap="bindVoucherDetailTap" data-index="{{index}}">{{card.name}}</button>
      </block>
    </scroll-view>
  </swiper-item>
  <swiper-item><view>待使用</view></swiper-item>
  <swiper-item><view>关注</view></swiper-item>
</swiper>

<view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showVoucherDetail || showEnterpriseDetail}}"></view>
<view class="modalDlg" wx:if="{{showVoucherDetail}}">
    <text>{{voucher_detail.name}}</text>
    <text>{{voucher_detail.message}}</text>
    <button wx:if="{{voucher_detail.verify_time}}" bindtap="close">已使用</button>
    <button wx:else bindtap="use">使用</button>
</view>
<view class="modalDlg" wx:if="{{showEnterpriseDetail}}">
  <view class="row">
    <text>名字:</text>
    <text>{{enterprise_detail.name}}</text>
  </view>
  <view class="row">
    <text>地址:</text>
    <text>{{enterprise_detail.address}}</text>
  </view>
  <view class="row">
    <text>电话:</text>
    <text>{{enterprise_detail.phone}}</text>
  </view>
  <view class="row">
    <text>营业号:</text>
    <text>{{enterprise_detail.license_id}}</text>
  </view>
  <view class="row">
    <text>负责人号</text>
    <text>{{enterprise_detail.leader_id}}</text>
  </view>
  <button wx:if="{{isEnterprise}}" bindtap="close">已注册</button>
  <button wx:else bindtap="register">注册</button>
</view>

