/* pages/management/management.wxss */
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title{
  align-items: center;
  padding-left: 40%;
  color: orange;
}

.head-btn{
  right: 0;
  background-color: transparent;
  color: orange;
}

.nav-btn{
  color: orange;
  background-color: transparent;
}

.body{
  height: 65vh;
}

.label{
  margin-top: 5px;
  color: orange;
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.modalDlg{
  width: 580rpx;
  height: 620rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}